/**
 * Memory of 4K registers, each 16 bit-wide. Out hold the value
 * stored at the memory location specified by address. If load=1, then
 * the in value is loaded into the memory location specified by address
 * (the loaded value will be emitted to out after the next time step.)
 */

CHIP RAM4K {
    IN in[16], load, address[12];
    OUT out[16];

    PARTS:
    DMux8Way(in=load, sel=address[0..2], a=aa, b=bb, c=cc, d=dd, e=ee, f=ff, g=gg, h=hh);

    RAM512(in=in, load=aa, address=address[3..11], out=ram0);
    RAM512(in=in, load=bb, address=address[3..11], out=ram1);
    RAM512(in=in, load=cc, address=address[3..11], out=ram2);
    RAM512(in=in, load=dd, address=address[3..11], out=ram3);
    RAM512(in=in, load=ee, address=address[3..11], out=ram4);
    RAM512(in=in, load=ff, address=address[3..11], out=ram5);
    RAM512(in=in, load=gg, address=address[3..11], out=ram6);
    RAM512(in=in, load=hh, address=address[3..11], out=ram7);

    Mux8Way16(a=ram0, b=ram1, c=ram2, d=ram3, e=ram4, f=ram5, g=ram6, h=ram7,
                sel=address[0..2], out=out);
}
